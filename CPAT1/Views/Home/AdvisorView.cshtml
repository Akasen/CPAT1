@model IEnumerable<Course>
@{
    ViewData["Title"] = "Advisor View";
}

<div>
    <h1>
        Advisor View
    </h1>
    <div>
        <h3>
            Student Name: Insert Student Name Here<br />
            N#: N99999999
        </h3>
    </div>
</div>
<div>
    <table border="0">
        <thead>
            <tr>
                <th colspan="4" style="text-align: center">
                    <h2>
                        Major: @Model.First().Major
                    </h2>
                </th>
            </tr>
            
        </thead>
        <tbody>
            @foreach (Course c in Model)
            {
            <tr>
                <td colspan="1"><h3>@nameof(c.CourseID): @c.CourseID</h3></td>
                <td colspan="2"><h3>@c.CourseName</h3></td>
                <td colspan="1"><h3>@nameof(c.CreditHours): @c.CreditHours</h3></td>
            </tr>
            <tr>
                <td colspan="4"><b>@nameof(c.Description)</b>: <i>@c.Description</i></td>
            </tr>
            <tr>
                <td colspan="1"><b>@nameof(c.PreRequisites)</b>: 
                                <ul>
                                    @if (c.PreRequisites.Count() > 0)
                                    {
                                        @for (int x = 0; x < c.PreRequisites.Length; x++)
                                        {
                                            int y = c.PreRequisites[x];
                                            <li>@y</li>;
                                        }
                                    } else
                                    {
                                     <li>N/A</li>   
                                    }
                                </ul>
                </td>
                <td colspan="1"><b>@nameof(c.CoRequisites)</b>:
                                <ul>
                                    @if (c.CoRequisites.Count() > 0)
                                    {
                                        @for (int x = 0; x < c.CoRequisites.Length; x++)
                                        {
                                            int y = c.CoRequisites[x];
                                            <li>@y</li>;
                                        }
                                    }
                                    else
                                    {
                                        <li>N/A</li>
                                    }
                                </ul>
                </td>
                <td colspan="2"></td>
            </tr>
            <tr>
                <td colspan="4">
                   <hr />
                </td>
            </tr>
            }
        </tbody>
</table>
</div>

